	<navigator url="" class="nav-item" hover-class="none">
        <view class="nums">10</view>
        <text class="gray">发布的</text>
    </navigator>
    <view class="nav-item">
        <view class="nums">10</view>
        <text class="gray">点击</text>
    </view>
    <view class="nav-item">
        <view class="nums">10</view>
        <text class="gray">分享</text>
    </view>
	<view class="nav-line"></view>
    <navigator url="" class="nav-item" hover-class="none">
        <view class="icon-money nums"></view>
        <text class="gray">去发布</text>
    </navigator>
</view>
.box {
	display: flex;
	flex-direction: column;
	padding: 30rpx;
	margin: 20rpx 20rpx 10rpx;
	background-color: #fff;
}

.box-tit {
	font-size: var(--biger);
	font-weight: bold;
	margin-bottom: 10rpx;
}

.box-time {
	font-size: var(--mini);
}

.box-msg {
	display: flex;
	flex-direction: column;
	margin: 20rpx 0;
	padding: 10rpx 0 30rpx;
	border-bottom: 1rpx solid #f5f6f7;
}

.jc {
	align-items: center;
	justify-content: center;
}

.box-price {
	margin-top: 10rpx;
	font-size: var(--biger);
}

.box-money {
	font-size: var(--bigers);
	font-family: din;
	font-weight: bold;
}

.box-li {
	margin: 10rpx 0;
}

.box-scan {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding-top: 25rpx;
	margin-top: 20rpx;
	border-top: 1rpx solid #f5f6f7;
}

.box-img {
	width: 100%;
	max-height: 320rpx;
	overflow: hidden;
}

.box-img image {
	width: 100%;
}

.box-name {
	font-size: var(--big);
	font-weight: bold;
	margin: 20rpx 0;
}
page {
	background-color: #fff;
	padding-bottom: 89rpx;
}

.foot {
	position: fixed;
	bottom: 0;
	left: 0;
	height: 89rpx;
	width: 100%;
	z-index: 999;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 10rpx 20rpx;
	overflow: hidden;
	background-color: rgba(170, 170, 170, .1);
}

.foot-btn {
	flex: 1;
	font-size: var(--mini);
	font-weight: normal;
	background-color: transparent;
}

.foot-btn text {
	font-size: var(--biger);
}

.foot-btn.line {
	border-right: 1rpx solid #eee;
}
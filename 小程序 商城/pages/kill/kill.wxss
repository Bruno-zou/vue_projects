.kill {
    display: flex;
    background-color: #fff;
    padding: 25rpx 20rpx;
    margin: 15rpx 20rpx;
}

.kill-img {
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
    margin-right: 20rpx;
}

.kill-img image {
    max-width: 100%;
    max-height: 100%;
}

.kill-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.kill-tit {
    flex: 1;
    font-size: var(--big);
}

.kill-bot {
    flex: 1;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.kill-pri {
    font-size: var(--mini);
}

.kill-mon {
    font-size: var(--biger);
    font-family: din;
    font-weight: bold;
}

.kill-mark {
    color: #aaa;
    margin-left: 15rpx;
    text-decoration: line-through;
}

.kill-sub {
    flex-shrink: 0;
    width: 170rpx;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #fff;
    background-image: linear-gradient(to right, #ff586d, #ed6666);
}

.kill-progress {
    display: flex;
    align-items: center;
}

.kill-progress progress {
    width: 100rpx;
    display: inline-block;
}

.kill-progress text {
    font-size: var(--minier);
    margin-left: 5rpx;
}
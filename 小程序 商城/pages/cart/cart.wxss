.head {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	display: flex;
	align-items: center;
	padding-left: 20rpx;
	background-color: #fff;
	z-index: 99999;
}

.footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 0;
    min-height: 98rpx;
	display: flex;
	align-items: center;
    justify-content: space-between;
	background-color: #fff;
	padding: 0 20rpx;
	border-bottom: 1rpx solid #f2f5f7;
    z-index: 99999;
}

.scroll {
	position: absolute;
	top: 0;
	bottom: 98rpx;
	left: 0;
	width: 100%;
}

.good {
	display: flex;
	align-items: center;
	margin: 20rpx 20rpx;
	padding: 15rpx;
	background-color: #fff;
}

.good-info {
	min-height: 180rpx;
	flex: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.good-img {
	width: 180rpx;
	height: 180rpx;
	margin: 0 25rpx 0 5rpx;
}

.good-img image {
	width: 100%;
	height: 100%;
}

.good-top {
	flex: 1;
}

.good-name {
	font-size: var(--big);
	line-height: 40rpx;
	height: 80rpx;
	margin-bottom: 5rpx;
	overflow: hidden;
}

.good-bot {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: space-between;
	margin-top: 15rpx;
}

.good-dos {
	display: flex;
	align-items: center;
}

.good-plus {
	width: 60rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border: 1rpx solid #f6f7f8;
}

.good-nums {
	width: 70rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	border: 1rpx solid #f6f7f8;
	border-right: 0;
	border-left: 0;
}

.good-price {
	color: #f78c2d;
	font-family: din;
}

.good-price text {
	font-size: var(--biger);
}

.go-info {
	display: flex;
	align-items: center;
}

.go-buy {
	width: 200rpx;
	height: 68rpx;
	line-height: 68rpx;
	text-align: center;
	color: #fff;
	margin-left: 20rpx;
	background-color: #ff586d;
}

.go-price {
	color: #ff586d;
	font-family: din;
	font-size: var(--biger);
}

.go-check {
	display: flex;
	align-items: center;
}

.go-check text {
	font-size: var(--mini);
}

radio {
	transform: scale(0.8)
}


.tit {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	margin: 50rpx 0 30rpx;
}

.tit-name {
	letter-spacing: 10rpx;
	font-weight: bold;
}

.tit-line {
	font-weight: lighter;
	margin: 0 5rpx;
}

.tit-tip {
	margin-top: 10rpx;
	font-size: var(--minier);
}


.hot {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
	margin: 0 20rpx;
}

.hot-box {
	width: 48.5%;
	padding-bottom: 20rpx;
	margin-bottom: 20rpx;
	overflow: hidden;
	background-color: rgba(255, 255, 255, .98);
}

.hot-box-img {
	height: 350rpx;
	overflow: hidden;
}

.hot-box-img image {
	max-height: 100%;
}

.hot-pd {
	padding: 0 20rpx;
}


.kill-good-name {
	font-weight: bold;
	white-space: nowrap;
	text-overflow: ellipsis;
	overflow: hidden;
	margin-top: 10rpx;
}

.kill-good-soal {
	font-size: var(--minier);
}

.kill-good-price {
	display: flex;
	margin-top: 13rpx;
}

.kill-good-now {
	color: #f78c2d;
}

.kill-good-symbol {
	font-weight: bold;
	font-size: var(--minier);
}

.kill-good-money {
	font-size: var(--biger);
	font-family: 'din';
	font-weight: bold;
}

.kill-good-old {
	margin: 13rpx 0 0 5rpx;
	font-family: 'din';
	font-size: var(--mini);
	text-decoration: line-through;
}